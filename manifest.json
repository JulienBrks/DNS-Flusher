{
  "version": "1.0",
	"name": "DNS Flusher for Chrome",
  "manifest_version": 2,
	"default_locale": "en",
	"description": "__MSG_extDescription__",
	"options_page": "dns-flusher-options.html",
	"browser_action": {
		"default_title": "DNS Flusher for Chrome",
		"default_icon": "icon.png"
	},
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
	"icons": { 
		"16": "icon.png",
    "48": "icon.png",
    "128": "icon.png" 
	},
	"permissions": [
		"tabs",
    "storage"
	]
}

