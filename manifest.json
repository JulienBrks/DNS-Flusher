{
  "version": "1.1.1",
  "name": "DNS Flusher for Chrome",
  "manifest_version": 2,
  "default_locale": "en",
  "description": "__MSG_extDescription__",
  "browser_action": {
    "default_title": "__MSG_defaultTitle__",
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    }
  },
  "options_ui": {
    // Required.
    "page": "dns-flusher-options.html",
    // Recommended.
    "chrome_style": true
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": { 
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "http://*/",
    "https://*/"
  ],
  "omnibox": {
    "keyword": "reload" 
  }
}
